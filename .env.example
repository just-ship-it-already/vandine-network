# IMPORTANT: Copy this file to .env and replace all dummy values with real ones
# NEVER commit the actual .env file to version control!

# Application Settings
DEBUG=False
SECRET_KEY=your-very-long-random-secret-key-change-this-immediately
ALLOWED_HOSTS=vandine.us,www.vandine.us,localhost,127.0.0.1

# Database Configuration
POSTGRES_DB=vandine_db
POSTGRES_USER=vandine_user
POSTGRES_PASSWORD=change-this-strong-password-immediately
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-this-redis-password-immediately

# Celery Configuration
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# Network Devices - Replace with your actual device credentials
# WARNING: These are sensitive credentials - keep them secure!
PI0_HOST=192.168.1.100
PI0_USERNAME=pi_username
PI0_PASSWORD=change-this-device-password

PI1_HOST=192.168.1.101
PI1_USERNAME=pi_username
PI1_PASSWORD=change-this-device-password

ROUTER_HOST=192.168.1.1
ROUTER_USERNAME=admin
ROUTER_PASSWORD=change-this-router-password

# Cloudflare Tunnel Configuration
# Get these values from your Cloudflare dashboard
TUNNEL_ID=your-tunnel-id-here
TUNNEL_TOKEN=your-tunnel-token-here
TUNNEL_METRICS_URL=http://localhost:20241/metrics

# Email Configuration (for alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@vandine.us
ADMIN_EMAIL=admin@vandine.us

# Monitoring Configuration
PROMETHEUS_ENABLED=True
GRAFANA_ENABLED=True
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Django Superuser (for initial setup)
# Change these immediately after first deployment!
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@vandine.us
DJANGO_SUPERUSER_PASSWORD=change-this-admin-password-immediately

# API Configuration
API_RATE_LIMIT=100/hour
API_TIMEOUT=30

# Security Settings
CORS_ALLOWED_ORIGINS=https://vandine.us,https://www.vandine.us
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
FASTAPI_LOG_LEVEL=INFO

# Performance
GUNICORN_WORKERS=2
UVICORN_WORKERS=2

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/backups

# Feature Flags
ENABLE_WEBSOCKET=True
ENABLE_METRICS_EXPORT=True
ENABLE_AUTO_DISCOVERY=True

# Third-party API Keys (if needed)
# EXTERNAL_API_KEY=your-api-key-here
# EXTERNAL_API_SECRET=your-api-secret-here

# Development Settings (only for development)
# DEV_MODE=False
# HOT_RELOAD=False